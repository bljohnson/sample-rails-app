<!-- by convention partial files are prefixed with an underscore -->
<!-- use partial to remove duplication in views -->
<!-- :article tells form_for helper what form is for
FormBuilder object - represented by f - used to build two labels and two text fields
a call to submit on the f object creates a submit button for form -->

<%= form_for @article do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
	</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		Â <% end %>
	</ul>
</div>
<% end %>

<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :text %><br>
	<%= f.text_area :text %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>
